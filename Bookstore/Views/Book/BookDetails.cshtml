@model Bookstore.Models.Book
<section id="best-selling" class="leaf-pattern-overlay">
	<div class="corner-pattern-overlay"></div>
	<div class="container">
		<div class="row justify-content-center">

			<div class="col-md-8">

				<div class="row">

					<div class="col-md-6">
						<figure class="products-thumb">
							<img src="@Model.ImageUrl" alt="book" class="single-image">
						</figure>
					</div>

					<div class="col-md-6">
						<div class="product-entry">
							<h2 class="section-title divider">@Model.Title</h2>

							<div class="products-content">
								<div class="author-name">By: @Model.Author</div>
								<h3 class="item-title">@Model.Genre</h3>
								<p>
									@Model.Description
								</p>
								<div class="item-price">@Model.Price JD</div>
								<div class="btn-wrap d-flex justify-content-around">
									<a asp-area="" asp-controller="Book" asp-action="GetAllBooks" class="btn-accent-arrow">
										 <i class="icon icon-arrow-left"></i> Back to the list
									</a>
								
									<a asp-action="EditBook" asp-route-id="@Model.Id" class="btn-accent-arrow">
										 Edit
									</a>

										<a asp-action="Delete" asp-route-id="@Model.Id" class="btn-accent-arrow" >
											Delete
										</a>
								</div>
							</div>

						</div>
					</div>

				</div>
				<!-- / row -->

			</div>

		</div>
	</div>
</section>

